include ../common/mixin/mixin

mixin anchor(myAnchor, link)
    a(href = link )&attributes(attributes) #{myAnchor}

mixin button(myButton)
    button&attributes(attributes) #{myButton}

mixin img(myImage)
    img(src='dist/' + myImage, aria-hidden='true')&attributes(attributes)

mixin logo
    +img("logo.png")(alt="brand-image", class="img-responsive")

mixin aboutMeta
    p Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text
mixin PrimaryNav
    nav.navbar.pull-right#sidebar-wrapper(role="navigation")
        .navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='#myNavbar')
                span.icon-bar
                span.icon-bar
                span.icon-bar
            #myNavbar.collapse.navbar-collapse
                ul.nav.navbar-nav
                    li
                        +anchor("Home", '/')
                    li
                        +anchor("About", '/about')
                    li.dropdown
                        +anchor("Services")(data-toggle='dropdown', class="dropdown-toggle")
                        ul.dropdown-menu
                            li
                                a(href='#') Page 1-1
                            li
                                a(href='#') Page 1-2
                            li
                                a(href='#') Page 1-3
                    li
                        +anchor("Portfolio", '/portfolio')
                    li
                        +anchor("Testimonial", '/testimonial')
                    li
                        +anchor("Contact", '/contact')

mixin ServiceNav
    ul.services-link
        .row.no-gutter
            .col-xs-6
                li
                    +anchor('Packers & Movers','services/packers-and-movers')
                li
                    +anchor('Packers & Movers','services/packers-and-movers')
                li
                    +anchor('Packers & Movers','services/packers-and-movers')
                li
                    +anchor('Packers & Movers','services/packers-and-movers')
            .col-xs-6
                li
                    +anchor('Packers & Movers','services/packers-and-movers')
                li
                    +anchor('Packers & Movers','services/packers-and-movers')
                li
                    +anchor('Packers & Movers','services/packers-and-movers')
                li
                    +anchor('Packers & Movers','services/packers-and-movers')

mixin socialNav
    ul.social-links
        li
            a(href="javascript:void(0);") 
                i.fa.fa-facebook(aria-hidden="true")
        li
            a(href="javascript:void(0);") 
                i.fa.fa-twitter(aria-hidden="true")
        li
            a(href="javascript:void(0);") 
                i.fa.fa-linkedin(aria-hidden="true")
        li
            a(href="javascript:void(0);") 
                i.fa.fa-instagram(aria-hidden="true")

mixin header
    header.primary
        .header-nav
            .container
                .row.no-gutter
                    .col-sm-3.col-xs-9
                        .nav-brand
                            +logo
                    .col-sm-9.col-xs-3.no-padding-right
                        +PrimaryNav
mixin footer
    footer
        .container
            .row
                .col-sm-4.col-xs-12
                    +widget("about")
                .col-sm-4.col-xs-12
                    +widget("services")
                .col-sm-4.col-xs-12
                    +widget("social")
            .mid-container
                .copyright
                    p All Rights Reserved
mixin widget(detail)
    .widget
        if detail == "about"
            +logo
            +aboutMeta
        if detail == "services"
            h4 Services
            +ServiceNav
        if detail == "social"
            h4 Stay Connected
            +socialNav